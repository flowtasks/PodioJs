{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "types": ["reflect-metadata", "node"],
        "noImplicitAny": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "inlineSourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "rootDir": "./src",
        "paths": {
            "podio-js": ["./src"]
        }
    }
}
